{
  "appId": "com.collmot.skybrush.live",
  "productName": "Skybrush Live",

  "files": [
    "index.html",
    "assets/**/*",
    "build/bundle.js",
    "build/launcher.bundle.js",
    "build/preload.bundle.js",
    "bulld/preload.js",
    {
      "from": "build",
      "filter": ["*.png", "*.ttf", "*.woff", "*.woff2"]
    },
    "!node_modules/**/*"
  ],

  "linux": {
    "category": "Utility"
  },

  "mac": {
    "category": "public.app-category.utilities",
    "target": "dmg"
  },

  "win": {
    "target": "portable"
  }
}
