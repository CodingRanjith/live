{
  "compilerOptions": {
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "paths": { "~/*": ["./src/*"] },
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
